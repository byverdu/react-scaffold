{
    "name": "react-scaffold",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@hot-loader/react-dom": "16.8.6",
        "@types/jest": "24.0.13",
        "@types/node": "12.0.2",
        "@types/react": "16.8.18",
        "@types/react-dom": "16.8.4",
        "@types/react-redux": "^7.0.9",
        "@types/redux": "^3.6.0",
        "@types/redux-actions": "^2.6.1",
        "husky": "^2.3.0",
        "lint-staged": "^8.1.7",
        "merge-reducers": "^1.0.0",
        "prettier": "^1.17.1",
        "react": "16.8.6",
        "react-app-rewire-hot-loader": "^2.0.1",
        "react-app-rewired": "^2.1.3",
        "react-dom": "16.8.6",
        "react-hot-loader": "^4.8.8",
        "react-redux": "^7.0.3",
        "react-scripts": "3.0.1",
        "redux": "^4.0.1",
        "redux-actions": "^2.6.5",
        "redux-devtools-extension": "^2.13.8",
        "tslint": "^5.16.0",
        "tslint-react": "^4.0.0",
        "typescript": "3.4.5"
    },
    "scripts": {
        "start": "react-app-rewired start",
        "build": "react-app-rewired build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "./node_modules/.bin/tslint --project tsconfig.prod.json --config tslint.prod.json"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --single-quote --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "set CI=true && npm run test && npm run lint --fix && npm run build"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
